{{ 'ethossence-products-complementary.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign complementary_data = product.metafields.ethossence.complementary_products.value
-%}

<pre>
  version 020
</pre>

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="complementary-products page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">

    {% if complementary_data != blank %}
      {%- if complementary_data.title != blank -%}
        <h2 class="complementary-products__heading inline-richtext {{ section.settings.heading_size }}">
          {{ complementary_data.title }}
        </h2>
      {%- endif -%}

      {%- if complementary_data.description != blank -%}
        <div class="complementary-products__description rte">
          {{ complementary_data.description | metafield_tag }}
        </div>
      {%- endif -%}

      {%- if complementary_data.product_list != blank -%}
        <div class="complementary-product_list">
          {%- for product in complementary_data.product_list.value -%}
            {%- liquid
              assign row_index = forloop.index0
              assign is_even = row_index | modulo: 2
              if is_even == 0
                assign row_class = 'complementary-products__row--white'
              else
                assign row_class = 'complementary-products__row--grey'
              endif
            -%}

            <div class="complementary-products__row {{ row_class }}">
              <div class="complementary-products__image">
                {%- if product.featured_image -%}
                  <img
                    src="{{ product.featured_image | image_url: width: 120 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="100"
                    height="100"
                    class="complementary-products__image-img"
                  >
                {%- else -%}
                  <div class="complementary-products__image-placeholder">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
              </div>

              <div class="complementary-products__content">
                <h3 class="complementary-products__product-title">
                  {{ product.title }}
                </h3>

                {%- if product.description != blank -%}
                  <div class="complementary-products__product-description">
                    {{ product.description | strip_html | truncatewords: 15 }}
                  </div>
                {%- endif -%}
              </div>

              <div class="complementary-products__actions">
                <a href="{{ product.url }}" class="button button-primary complementary-products__view-link">
                  View
                </a>

                <div class="complementary-products__add-form">
                  <button
                    type="button"
                    class="button button-secondary complementary-products__add-button js-complementary-add-to-cart"
                    data-product-variant-id="{{ product.first_available_variant.id }}"
                    data-product-title="{{ product.title | escape }}"
                    {% if product.available == false %}disabled{% endif %}
                  >
                    {%- if product.available -%}
                      {{ 'products.product.add_to_cart' | t }}
                    {%- else -%}
                      {{ 'products.product.sold_out' | t }}
                    {%- endif -%}
                  </button>
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const buttons = document.querySelectorAll('.js-complementary-add-to-cart');

    buttons.forEach(button => {
      button.addEventListener('click', handleAddToCart);
    });

    function handleAddToCart(e) {
      e.preventDefault();
      e.stopPropagation();

      const btn = e.currentTarget;
      const variantId = btn.getAttribute('data-product-variant-id');
      const productTitle = btn.getAttribute('data-product-title');
      const originalText = btn.textContent.trim();

      if (!variantId) {
        console.error('Variant ID not found');
        return;
      }

      // Disable button and show loading state
      btn.disabled = true;
      btn.textContent = 'Adding...';

      // Use window.Shopify.routes.root for locale-aware URL
      const cartUrl = (window.Shopify && window.Shopify.routes && window.Shopify.routes.root)
        ? window.Shopify.routes.root + 'cart/add.js'
        : '/cart/add.js';

      // Send AJAX request using Shopify Ajax API
      fetch(cartUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          items: [{
            id: parseInt(variantId),
            quantity: 1
          }]
        })
      })
      .then(response => {
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        return response.json();
      })
      .then(data => {
        // Success - update button text
        btn.textContent = 'Added!';

        // Reset button after 2 seconds
        setTimeout(() => {
          btn.textContent = originalText;
          btn.disabled = false;
        }, 2000);

        // Dispatch custom event for cart updates
        document.dispatchEvent(new CustomEvent('cart:updated', {
          detail: {
            product: productTitle,
            items: data
          }
        }));
      })
      .catch(error => {
        console.error('Error adding to cart:', error);
        btn.textContent = 'Error - Try Again';
        btn.disabled = false;

        // Reset after 3 seconds
        setTimeout(() => {
          btn.textContent = originalText;
        }, 3000);
      });
    }
  });
</script>

{% schema %}
{
  "name": "Complementary products",
  "tag": "section",
  "class": "section",
  "enabled_on": {
    "templates": ["product"]
  },
  "settings": [
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h2",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Complementary products",
      "category": "Ethossence"
    }
  ]
}
{% endschema %}
