{{ 'section-product-specifications.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="product-specifications page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- liquid
      assign specifications = product.metafields.ethossence.specifications.value
    -%}

    {% if specifications != blank and specifications.size > 0 %}
      {%- if section.settings.heading != blank -%}
        <h2 class="product-specifications__heading inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.introduction != blank -%}
        <div class="product-specifications__introduction rte">
          {{ section.settings.introduction }}
        </div>
      {%- endif -%}

      <div class="product-specifications__grid">
        {% for spec in specifications %}
          {%- liquid
            assign row_index = forloop.index0
            assign is_even = row_index | modulo: 2
            if is_even == 0
              assign row_class = 'product-specifications__row--white'
            else
              assign row_class = 'product-specifications__row--grey'
            endif
          -%}

          <div class="product-specifications__row {{ row_class }}">
            <div class="product-specifications__label">
              {{ spec.label | newline_to_br }}
            </div>
            <div class="product-specifications__data">
              {{ spec.data | newline_to_br }}
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Product Specifications",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "Display product specifications from the ethossence.specifications metafield. This metafield should be a list reference to Specification metaobjects with Label and Data fields."
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Specifications",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra Large"
        },
        {
          "value": "hxxl",
          "label": "XX Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "introduction",
      "label": "Introduction paragraph",
      "info": "Optional introduction text to display before the specifications"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product Specifications"
    }
  ]
}
{% endschema %}
