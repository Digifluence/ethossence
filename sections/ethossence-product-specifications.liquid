{{ 'ethossence-product-specifications.css' | asset_url | stylesheet_tag }}
{%- if section.settings.enable_accordion -%}
  {{ 'ethossence-accordion.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'ethossence-accordion.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
   assign specifications = product.metafields.ethossence.specifications.value
-%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="product-specifications page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"{% if section.settings.enable_accordion %} data-ethossence-accordion{% endif %}>

    {% if specifications != blank %}
      {%- comment -%} Section Heading with Accordion Toggle {%- endcomment -%}
      {%- if section.settings.heading != blank -%}
        <div class="ethossence-accordion__header">
          <h2 class="product-specifications__heading inline-richtext {{ section.settings.heading_size }} {{ section.settings.heading_alignment }}">
            {{ section.settings.heading }}
          </h2>
          {%- if section.settings.enable_accordion -%}
            <button type="button" class="ethossence-accordion__toggle" data-accordion-toggle>
              <span data-expand-text>+ {{ 'sections.accordion.expand' | t | default: 'expand' }}</span>
              <span data-collapse-text>- {{ 'sections.accordion.collapse' | t | default: 'collapse' }}</span>
            </button>
          {%- endif -%}
        </div>
      {%- endif -%}

      {%- comment -%} Accordion content wrapper {%- endcomment -%}
      <div class="{% if section.settings.enable_accordion %}ethossence-accordion__content{% endif %}"{% if section.settings.enable_accordion %} data-accordion-content{% endif %}>

      {%- if section.settings.paragraph != blank -%}
        <div class="product-specifications__introduction rte">
          {{ section.settings.paragraph }}
        </div>
      {%- endif -%}

      <div class="product-specifications__grid">
        {% for spec in specifications %}
          {%- liquid
            assign row_index = forloop.index0
            assign is_even = row_index | modulo: 2
            if is_even == 0
              assign row_class = 'product-specifications__row--white'
            else
              assign row_class = 'product-specifications__row--grey'
            endif
          -%}

          <div class="product-specifications__row {{ row_class }}">
            <div class="product-specifications__label">
              {{ spec.label | newline_to_br }}
            </div>
            <div class="product-specifications__data">
              {{ spec.data | newline_to_br }}
            </div>
          </div>
        {% endfor %}
      </div>

      </div>{%- comment -%} Close accordion content wrapper {%- endcomment -%}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Specifications",
   "tag": "section",
   "class": "section",
      "enabled_on": {
         "templates": ["product"]
   },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Specifications",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Heading alignment"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Accordion"
    },
    {
      "type": "checkbox",
      "id": "enable_accordion",
      "label": "Enable accordion expand/collapse",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Specifications",
      "category": "Ethossence - products"
    }
  ]
}
{% endschema %}