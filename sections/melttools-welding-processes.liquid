{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
   assign characteristics = product.metafields.iqx.characteristics.value
-%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="product-specifications page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">

    {% if characteristics != blank %}
      {%- if section.settings.heading != blank -%}
        <h2 class="product-specifications__heading inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      {%- endif -%}

      {%- if section.settings.introduction != blank -%}
        <div class="product-specifications__introduction rte">
          {{ section.settings.introduction }}
        </div>
      {%- endif -%}

      <div class="product-specifications__grid">
        {% for char in characteristics %}
          <div class="product-specifications__row">
            <img src="https://cdn.shopify.com/s/files/1/0496/5754/4864/files/{{ char }}.png" width="90" height="90" title="Made for welding process {{ characteristics }}" />
          </div>
        {% endfor %}
      </div>

    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Welding processes",
   "tag": "section",
   "class": "section",
      "enabled_on": {
         "templates": ["product"]
   },
  "settings": [
    {
      "type": "paragraph",
      "content": "Display product specifications from the ethossence.specifications metafield. This metafield should be a list reference to Specification metaobjects with Label and Data fields."
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Welding processes",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        },
        {
          "value": "hxl",
          "label": "Extra Large"
        },
        {
          "value": "hxxl",
          "label": "XX Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "richtext",
      "id": "introduction",
      "label": "Introduction paragraph",
      "info": "Optional introduction text to display before the specifications"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Welding processes"
    }
  ]
}
{% endschema %}