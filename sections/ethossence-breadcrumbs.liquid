{%- liquid
   comment
      Clean position labels from menu prefixes and truncate to 27 characters
   endcomment
   assign pos_1_clean = pos_1 | remove: 'A] ' | remove: 'B] ' | remove: 'C] ' | remove: 'D] ' | remove: '1] ' | remove: '2] ' | remove: '3] ' | remove: '4] ' | remove: '5] ' | remove: '6] ' | remove: '7] ' | remove: '8] ' | remove: '9] ' | remove: '10] ' | truncate: 60
   assign pos_2_clean = pos_2 | remove: 'A] ' | remove: 'B] ' | remove: 'C] ' | remove: 'D] ' | remove: '1] ' | remove: '2] ' | remove: '3] ' | remove: '4] ' | remove: '5] ' | remove: '6] ' | remove: '7] ' | remove: '8] ' | remove: '9] ' | remove: '10] ' | truncate: 60
   assign pos_3_clean = pos_3 | remove: 'A] ' | remove: 'B] ' | remove: 'C] ' | remove: 'D] ' | remove: '1] ' | remove: '2] ' | remove: '3] ' | remove: '4] ' | remove: '5] ' | remove: '6] ' | remove: '7] ' | remove: '8] ' | remove: '9] ' | remove: '10] ' | truncate: 60
   assign pos_4_clean = pos_4 | remove: 'A] ' | remove: 'B] ' | remove: 'C] ' | remove: 'D] ' | remove: '1] ' | remove: '2] ' | remove: '3] ' | remove: '4] ' | remove: '5] ' | remove: '6] ' | remove: '7] ' | remove: '8] ' | remove: '9] ' | remove: '10] ' | truncate: 60
-%}

<div id="block-breadcrumbs" class="color-{{ section.settings.color_scheme }} gradient page-width section-{{ section.id }}-padding">
   <nav aria-label="You are here:" role="navigation">
      <ul class="breadcrumbs" vocab="https://schema.org/" typeof="BreadcrumbList">

         <li property="itemListElement" typeof="ListItem">
            <a property="item" typeof="WebPage" href="/"><span property="name">Home</span></a>
            <meta property="position" content="1">
         </li>

         <li property="itemListElement" typeof="ListItem">
            {%- if pos_2 != 'n0ne'-%}
               <a property="item" typeof="WebPage" href="{{ pos_1_url }}">
            {%- endif -%}
            <span property="name">{{ pos_1_clean }}</span>
            {%- if pos_2 != 'n0ne'-%}
               </a>
            {%- endif -%}
            <meta property="position" content="2">
         </li>

         {%- if pos_2 != 'n0ne'-%}
            <li property="itemListElement" typeof="ListItem">
               {%- if pos_3 != 'n0ne'-%}
                  <a property="item" typeof="WebPage" href="{{ pos_2_url }}">
               {%- endif -%}
                  <span property="name">{{ pos_2_clean }}</span>
               {%- if pos_3 != 'n0ne'-%}
                  </a>
               {%- endif -%}
               <meta property="position" content="3">
            </li>
         {%- endif -%}

         {%- if pos_3 != 'n0ne'-%}
            <li property="itemListElement" typeof="ListItem">
               {%- if pos_3_url != 'n0ne'-%}
                  <a property="item" typeof="WebPage" href="{{ pos_3_url }}">
               {%- endif -%}
               <span property="name">{{ pos_3_clean }}</span>
               {%- if pos_3_url != 'n0ne'-%}
                  </a>
               {%- endif -%}
               <meta property="position" content="4">
            </li>
         {%- endif -%}

         {%- if pos_4 != 'n0ne'-%}
            <li property="itemListElement" typeof="ListItem">
               <span property="name">{{ pos_4_clean }}</span>
               <meta property="position" content="5">
            </li>
         {%- endif -%}

      </ul> 
   </nav>
</div>
