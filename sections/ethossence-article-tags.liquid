{%- comment -%}
  ETHOSSENCE ARTICLE TAGS SECTION
{%- endcomment -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Article tags styles */
  #shopify-section-{{ section.id }} .article-tags__heading {
    margin-bottom: 2rem;
  }

  #shopify-section-{{ section.id }} .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  #shopify-section-{{ section.id }} .tag-item {
    display: inline-block;
    padding: 0.8rem 1.6rem;
    background-color: rgba(var(--color-foreground), 0.08);
    color: rgb(var(--color-foreground));
    text-decoration: none;
    border-radius: 0.4rem;
    font-size: 1.4rem;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  #shopify-section-{{ section.id }} .tag-item:hover {
    background-color: rgba(var(--color-foreground), 0.15);
    text-decoration: none;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding isolate">

    {%- if section.settings.heading != blank -%}
      <h2 class="article-tags__heading {{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if article.tags.size > 0 -%}
      <div class="tags-list">
        {% for tag in article.tags %}
          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="tag-item">{{ tag }}</a>
        {% endfor %}
      </div>
    {%- endif -%}

  </div>
</div>

{% schema %}
{
  "name": "Blog article tags",
  "limit": 1,
  "tag": "section",
  "class": "section",
  "enabled_on": {
    "templates": ["article"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Tagged"
    },   
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    }, 
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Blog article tags",
      "category": "Ethossence"
    }
  ]
}
{% endschema %}
