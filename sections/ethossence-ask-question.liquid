{%- comment -%}
  ETHOSSENCE Ask a Question SECTION
{%- endcomment -%}

{{ 'ethossence-ask-question.css' | asset_url | stylesheet_tag }}

{%- style -%}
  /* Section Padding - Requires Liquid variables */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2
                class="rich-text__heading rte inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ block.settings.heading }}
              </h2>
            {%- when 'caption' -%}
              <p
                class="rich-text__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ block.settings.caption | escape }}
              </p>
            {%- when 'text' -%}
              <div
                class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ block.settings.text }}
              </div>
            {%- when 'form' -%}
              <div
                class="ask-question__form-wrapper{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {%- form 'contact', id: 'AskQuestionForm', class: 'ask-question__form' -%}
                  {%- if form.posted_successfully? -%}
                    <p class="ask-question__success" tabindex="-1" autofocus>
                      {{ block.settings.success_message }}
                    </p>
                  {%- endif -%}

                  {%- if form.errors -%}
                    <div class="ask-question__errors">
                      {{ form.errors | default_errors }}
                    </div>
                  {%- endif -%}

                  <div class="ask-question__required-inputs">
                    <div class="field">
                      <input
                        type="text"
                        id="AskQuestionName-{{ section.id }}"
                        name="contact[Full Name]"
                        class="field__input"
                        placeholder="{{ block.settings.name_label }}"
                        required
                        autocomplete="name"
                      >
                      <label for="AskQuestionName-{{ section.id }}" class="field__label">
                        {{ block.settings.name_label }}
                      </label>
                    </div>

                    <div class="field">
                      <input
                        type="email"
                        id="AskQuestionEmail-{{ section.id }}"
                        name="contact[email]"
                        class="field__input"
                        placeholder="{{ block.settings.email_label }}"
                        required
                        autocomplete="email"
                        {% if customer %}value="{{ customer.email }}"{% endif %}
                      >
                      <label for="AskQuestionEmail-{{ section.id }}" class="field__label">
                        {{ block.settings.email_label }}
                      </label>
                    </div>

                    <div class="field">
                      <textarea
                        id="AskQuestionBody-{{ section.id }}"
                        name="contact[body]"
                        class="field__input text-area"
                        placeholder="{{ block.settings.question_label }}"
                        rows="2"
                        required
                      ></textarea>
                      <label for="AskQuestionBody-{{ section.id }}" class="field__label">
                        {{ block.settings.question_label }}
                      </label>
                    </div>
                  </div>

                  <div class="ask-question__footer">
                    <div class="ask-question__request-callback">
                      <div class="ask-question__checkbox-wrapper">
                        <input
                          type="checkbox"
                          id="AskQuestionCallback-{{ section.id }}"
                          name="contact[Callback Requested]"
                          value="Yes"
                          class="ask-question__checkbox"
                          data-ask-question-callback="{{ section.id }}"
                        >
                        <label for="AskQuestionCallback-{{ section.id }}" class="ask-question__checkbox-label">
                          {{ block.settings.callback_label }}
                        </label>
                      </div>

                      <div class="ask-question__phone-wrapper" id="AskQuestionPhone-{{ section.id }}" hidden>
                        <div class="field">
                          <input
                            type="tel"
                            id="AskQuestionPhoneInput-{{ section.id }}"
                            name="contact[Phone Number]"
                            class="field__input"
                            placeholder="{{ block.settings.phone_label }}"
                            autocomplete="tel"
                          >
                          <label for="AskQuestionPhoneInput-{{ section.id }}" class="field__label">
                            {{ block.settings.phone_label }}
                          </label>
                        </div>
                      </div>
                    </div>

                    <div class="ask-question__submit-button">
                      <button type="submit" class="button">
                        {{ block.settings.button_label }}
                      </button>
                    </div>
                  </div>
                {%- endform -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  (function() {
    var checkbox = document.querySelector('[data-ask-question-callback="{{ section.id }}"]');
    var phoneWrapper = document.getElementById('AskQuestionPhone-{{ section.id }}');
    if (checkbox && phoneWrapper) {
      checkbox.addEventListener('change', function() {
        phoneWrapper.hidden = !this.checked;
      });
    }
  })();
</script>

