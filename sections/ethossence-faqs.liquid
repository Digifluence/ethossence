{%- comment -%}
  ETHOSSENCE 
  FREQUENTLY ASKED QUESTIONS (FAQs) SECTION
{%- endcomment -%}

{%- liquid

  assign faqs = blank

  if template contains 'page'
    assign faqs = page.metafields.ethossence.faqs.value
  elsif template contains 'article'
    assign faqs = article.metafields.ethossence.faqs.value
  elsif template contains 'blog'
    assign faqs = blog.metafields.ethossence.faqs.value
  elsif template contains 'collection'
    assign faqs = collection.metafields.ethossence.faqs.value
  elsif template contains 'product'
    assign faqs = product.metafields.ethossence.faqs.value
  endif

-%}

{{ 'ethossence-faqs.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- if faqs != blank -%}
   <div class="color-{{ section.settings.color_scheme }} gradient">
      <div class="ethossence-faqs section-{{ section.id }}-padding">
         <div class="ethossence-faqs page-width isolate">

            {%- if section.settings.heading != blank -%}
               <h2 class="ethossence-faqs__heading {{ section.settings.heading_size }} ethossence-faqs__heading--{{ section.settings.heading_alignment }}">
                  {{ section.settings.heading }}
               </h2>
            {%- endif -%}

            <div class="ethossence-faqs__list">
               {%- for faq in faqs -%}
                  <div class="ethossence-faqs__item{% cycle ' ethossence-faqs__item--grey', '' %}">
                     <div class="ethossence-faqs__content">
                        <button type="button" class="ethossence-faqs__question" aria-expanded="false">
                           <h3>{{ faq.question }}</h3>
                           <span class="ethossence-faqs__icon" aria-hidden="true">+</span>
                        </button>
                        <div class="ethossence-faqs__answer rte">
                           {{ faq.answer }}
                        </div>
                     </div>
                  </div>
               {%- endfor -%}
            </div>
      
         </div>
      </div>
   </div>

{%- endif -%}

<script>
  (function() {
    function initFaqs() {
      document.querySelectorAll('.ethossence-faqs__question').forEach(function(btn) {
        if (btn.hasAttribute('data-faq-init')) return;
        btn.setAttribute('data-faq-init', 'true');

        btn.addEventListener('click', function() {
          var item = btn.closest('.ethossence-faqs__item');
          var isOpen = item.classList.contains('is-open');

          if (isOpen) {
            item.classList.remove('is-open');
            btn.setAttribute('aria-expanded', 'false');
          } else {
            item.classList.add('is-open');
            btn.setAttribute('aria-expanded', 'true');
          }
        });
      });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initFaqs);
    } else {
      initFaqs();
    }
    document.addEventListener('shopify:section:load', initFaqs);
  })();
</script>

{% schema %}
{
  "name": "FAQS",
  "tag": "section",
  "class": "section",
  "enabled_on": {
    "templates": ["article", "blog", "collection", "page", "product"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Header"
    },       
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h2",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Heading alignment"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 28
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 28
    }
  ],
  "presets": [
    {
      "name": "FAQS",
      "category": "Ethossence"
    }
  ]
}
{% endschema %}