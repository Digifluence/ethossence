   <div class="field">
      <input 
         type="text"
         id="wc_power_peak"
         name="attributes[What is the peak welding power?]"
         class="field__input cart-attribute"
         placeholder="Please indicate amps/KW and if welding is pulsed"
         value="{{ cart.attributes['What is the peak welding power?'] }}"
