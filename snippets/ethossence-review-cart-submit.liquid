<div id="review-request-fields" class="contact ethossence-form cart-attributes">


<!-- FIELD: TITLE FROM CUSTOMER  -->  
<div class="field">
   
      <input id="title_from_customer" class="field__input cart-attribute" type="text" name="attributes[Title from customer]" placeholder="Title from customer" value="{{ cart.attributes[Title from customer] }}">
      <label class="field__label" for="title_from_customer">Title from customer </label>
      <div class="field__text"></div>
      <div class="error-message" id="title_from_customer_error"></div>

</div>

<!-- FIELD: WHAT IS THE TYPE OF MACHINE?  -->  
<div class="field">
   
      <input id="wc_type_of_machine" class="field__input cart-attribute" type="text" name="attributes[What is the type of machine?]" placeholder="What is the type of machine?" value="{{ cart.attributes[What is the type of machine?] }}">
      <label class="field__label" for="wc_type_of_machine">What is the type of machine? </label>
      <div class="field__text">e.g. Column and boom, tube mill, orbital, carriage, robot, etc.</div>
      <div class="error-message" id="wc_type_of_machine_error"></div>

</div>

<!-- FIELD: WHAT MATERIAL(S) WILL BE WELDED?  -->  
<div class="field">
   
      <input id="wc_materials" class="field__input cart-attribute" type="text" name="attributes[What material(s) will be welded?]" placeholder="What material(s) will be welded?" value="{{ cart.attributes[What material(s) will be welded?] }}">
      <label class="field__label" for="wc_materials">What material(s) will be welded? </label>
      <div class="field__text">e.g. Steel, stainless steel, titanium, aluminum, alloys, etc.</div>
      <div class="error-message" id="wc_materials_error"></div>

</div>

<!-- FIELD: WHAT IS THE THICKNESS OF THE MATERIAL(S)?  -->  
<div class="field">
   
      <input id="wc_materials_thickness" class="field__input cart-attribute" type="text" name="attributes[What is the thickness of the material(s)?]" placeholder="What is the thickness of the material(s)?" value="{{ cart.attributes[What is the thickness of the material(s)?] }}">
      <label class="field__label" for="wc_materials_thickness">What is the thickness of the material(s)? </label>
      <div class="field__text">Welding applications only, please indicate if inches or mm.</div>
      <div class="error-message" id="wc_materials_thickness_error"></div>

</div>

<!-- FIELD: WHICH SHIELDING GASES ARE USED?  -->  
<div class="field">
   
      <input id="wc_shielding_gases" class="field__input cart-attribute" type="text" name="attributes[Which shielding gases are used?]" placeholder="Which shielding gases are used?" value="{{ cart.attributes[Which shielding gases are used?] }}">
      <label class="field__label" for="wc_shielding_gases">Which shielding gases are used? </label>
      <div class="field__text">e.g. argon, oxygen, CO2, etc.</div>
      <div class="error-message" id="wc_shielding_gases_error"></div>

</div>

<!-- FIELD: WHAT IS THE AVERAGE WELDING POWER?  -->  
<div class="field">
   
      <input id="wc_power_avg" class="field__input cart-attribute" type="text" name="attributes[What is the average welding power?]" placeholder="What is the average welding power?" value="{{ cart.attributes[What is the average welding power?] }}">
      <label class="field__label" for="wc_power_avg">What is the average welding power? </label>
      <div class="field__text">Please indicate amps/KW and if welding is pulsed.</div>
      <div class="error-message" id="wc_power_avg_error"></div>

</div>

<!-- FIELD: WHAT IS THE PEAK WELDING POWER?  -->  
<div class="field">
   
      <input id="wc_power_peak" class="field__input cart-attribute" type="text" name="attributes[What is the peak welding power?]" placeholder="What is the peak welding power?" value="{{ cart.attributes[What is the peak welding power?] }}">
      <label class="field__label" for="wc_power_peak">What is the peak welding power? </label>
      <div class="field__text">Please indicate amps/KW and if welding is pulsed.</div>
      <div class="error-message" id="wc_power_peak_error"></div>

</div>

<!-- FIELD: IF PRE-HEATED, TO WHAT TEMPERATURE?  -->  
<div class="field">
   
      <input id="wc_material_preheated_temp" class="field__input cart-attribute" type="text" name="attributes[If pre-heated, to what temperature?]" placeholder="If pre-heated, to what temperature?" value="{{ cart.attributes[If pre-heated, to what temperature?] }}">
      <label class="field__label" for="wc_material_preheated_temp">If pre-heated, to what temperature? </label>
      <div class="field__text">Please indicate Fahrenheit or Celsius.</div>
      <div class="error-message" id="wc_material_preheated_temp_error"></div>

</div>

<!-- FIELD: WHAT IS THE APPROXIMATE TRAVERSE SPEED?  -->  
<div class="field">
   
      <input id="wc_traverse_speed" class="field__input cart-attribute" type="text" name="attributes[What is the approximate traverse speed?]" placeholder="What is the approximate traverse speed?" value="{{ cart.attributes[What is the approximate traverse speed?] }}">
      <label class="field__label" for="wc_traverse_speed">What is the approximate traverse speed? </label>
      <div class="field__text">Please indicate inch/mm or mm/min.</div>
      <div class="error-message" id="wc_traverse_speed_error"></div>

</div>

   {%- comment -%}

